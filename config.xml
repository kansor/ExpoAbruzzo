<?xml version='1.0' encoding='utf-8'?>
<widget id="it.regione.abruzzo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Expo Abruzzo</name>
    <description>
        Applicazione Ufficiale Regione Abruzzo per Expo 2015 Milano
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Squadra Genew
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreen" value="www/img/Splash.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/res/icon/android/icon-57.png" width="57" height="57" />
	<icon src="www/res/icon/android/icon-57-2x.png" width="114" height="114" />
	<icon src="www/res/icon/android/icon-72.png" width="72" height="72" />
	<icon src="www/res/icon/android/icon-72-2x.png" width="144" height="144" />
</widget>
